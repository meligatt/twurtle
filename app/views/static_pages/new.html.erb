<h1>Search a Twitter Handle</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:session, url: login_path) do |f| %>

			<%= f.label :handle %>
			<%= f.text_field :handle, class: 'form-control' %>

			<%= f.submit "Create Word Cloud", class: "btn btn-primary" %>
		<% end %>

	</div>
</div>
